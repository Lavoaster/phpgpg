{
    "name": "travisghansen/phpgpg",
    "type": "library",
    "description": "Support PGP operations in PHP",
    "license": "LGPL-2.1",
    "keywords": ["encryption", "PGP", "gnupg", "gpg"],
    "homepage": "https://github.com/travisghansen/phpgpg/",
    "authors": [
        {
            "name" : "Travis Glenn Hansen"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.5.*"
    },
    "suggest": {
        "ext-gnupg": "Use gpgme instead of cli driver"
    },
    "autoload": {
        "psr-0": {"PhpGpg\\": "src/"}
    }
}
